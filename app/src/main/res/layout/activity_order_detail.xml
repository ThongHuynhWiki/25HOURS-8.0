<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".profile.menuprofile.myactivities.orderdetails.OrderDetailActivity">

    <LinearLayout
        android:padding="@dimen/padding_body_account_to_border_profile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtOrderID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_default"
                android:textColor="@color/color_black_2"
                android:textSize="@dimen/text_size_label_order_id"
                android:textStyle="bold"
                android:fontFamily="@font/gotu_regular"
                />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_processing"
                android:textColor="@color/color_blue_1"
                android:textSize="@dimen/text_size_status_order"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:fontFamily="@font/jost_regular"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtDate"
            android:layout_marginTop="@dimen/margin_top_date_to_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_date_order_detail_test"
            android:textColor="@color/color_black_2"
            android:textSize="@dimen/text_size_date_order_details"
            android:textStyle="bold"
            android:fontFamily="@font/jost_light"
            />

        <TextView
            android:layout_marginTop="@dimen/margin_top_label_to_date_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_shopping_address"
            android:textColor="@color/color_black_2"
            android:textSize="@dimen/text_size_label_shipping_address_details"
            android:textStyle="bold"
            android:fontFamily="@font/jost_regular"
            />

        <TextView
            android:id="@+id/txtName"
            android:layout_marginTop="@dimen/margin_top_name_to_label_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_name_test"
            android:textColor="@color/color_gray_4"
            android:textSize="@dimen/text_size_email_profile"
            android:fontFamily="@font/jost_light"
            />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_marginTop="@dimen/margin_top_between_info_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_address_order_details_test"
            android:textColor="@color/color_gray_4"
            android:textSize="@dimen/text_size_email_profile"
            android:fontFamily="@font/jost_light"
            />

        <TextView
            android:id="@+id/txtPostCode"
            android:layout_marginTop="@dimen/margin_top_between_info_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_post_code_test"
            android:textColor="@color/color_gray_4"
            android:textSize="@dimen/text_size_email_profile"
            android:fontFamily="@font/jost_light"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_line_saperate_element"
            android:background="@color/color_gray_2"
            android:layout_marginTop="@dimen/margin_top_line_to_info_order_id"
            />

        <TextView
            android:layout_marginTop="@dimen/margin_top_line_to_info_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_payment_method"
            android:textColor="@color/color_black_2"
            android:textSize="@dimen/text_size_label_shipping_address_details"
            android:textStyle="bold"
            android:fontFamily="@font/jost_regular"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/margin_top_card_to_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imgCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_visa"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/txtNumberCard"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_number_card_test"
                android:textColor="@color/color_black_2"
                android:textSize="@dimen/text_size_email_profile"
                android:textStyle="bold"
                android:fontFamily="@font/jost_light"
                android:layout_marginLeft="@dimen/margin_left_number_card_to_img_card_order_detail"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_line_saperate_element"
            android:background="@color/color_gray_2"
            android:layout_marginTop="@dimen/margin_top_line_to_info_order_id"
            />

        <TextView
            android:layout_marginTop="@dimen/margin_top_line_to_info_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_order_details"
            android:textColor="@color/color_black_2"
            android:textSize="@dimen/text_size_label_shipping_address_details"
            android:textStyle="bold"
            android:fontFamily="@font/jost_regular"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_list_product_to_label_order_details"
            android:id="@+id/rcvListOrder"
            />

        <TextView
            android:layout_marginTop="@dimen/margin_top_line_to_info_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_price_summary"
            android:textColor="@color/color_black_2"
            android:textSize="@dimen/text_size_label_shipping_address_details"
            android:textStyle="bold"
            android:fontFamily="@font/jost_regular"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_subtal"
                android:textSize="@dimen/text_size_email_profile"
                android:fontFamily="@font/jost_light"
                android:textColor="@color/color_black_1"
                />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/txtSubtal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_default"
                android:textSize="@dimen/text_size_email_profile"
                android:fontFamily="@font/jost_light"
                android:textColor="@color/color_black_1"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_shipping_fee"
                android:textSize="@dimen/text_size_email_profile"
                android:fontFamily="@font/jost_light"
                android:textColor="@color/color_black_1"
                />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/txtShippingFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_default"
                android:textSize="@dimen/text_size_email_profile"
                android:fontFamily="@font/jost_light"
                android:textColor="@color/color_black_1"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_gift_wrapping_fee"
                android:textSize="@dimen/text_size_email_profile"
                android:fontFamily="@font/jost_light"
                android:textColor="@color/color_black_1"
                />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/txtGiftWrappingFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_default"
                android:textSize="@dimen/text_size_email_profile"
                android:fontFamily="@font/jost_light"
                android:textColor="@color/color_black_1"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_tax"
                android:textSize="@dimen/text_size_email_profile"
                android:fontFamily="@font/jost_light"
                android:textColor="@color/color_black_1"
                />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/txtTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_default"
                android:textSize="@dimen/text_size_email_profile"
                android:fontFamily="@font/jost_light"
                android:textColor="@color/color_black_1"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_line_saperate_element"
            android:background="@color/color_gray_2"
            android:layout_marginTop="@dimen/margin_top_line_to_label_membership"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtLabelRedeemed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_default"
                android:textSize="@dimen/text_size_email_profile"
                android:fontFamily="@font/jost_light"
                android:textColor="@color/color_black_1"
                />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/txtRedeemed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_default"
                android:textSize="@dimen/text_size_email_profile"
                android:fontFamily="@font/jost_light"
                android:textColor="@color/color_black_1"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_line_saperate_element"
            android:background="@color/color_gray_2"
            android:layout_marginTop="@dimen/margin_top_line_to_label_membership"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_total"
                android:textSize="@dimen/text_size_label_shipping_address_details"
                android:fontFamily="@font/jost_medium"
                android:textColor="@color/color_black_1"
                />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/txtTotalMoney"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_default"
                android:textSize="@dimen/text_size_label_shipping_address_details"
                android:fontFamily="@font/jost_medium"
                android:textColor="@color/color_black_1"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_gst"
            android:textSize="@dimen/text_size_gst"
            android:fontFamily="@font/jost_light"
            android:textColor="@color/color_gray_4"
            />

        <TextView
            android:layout_marginTop="@dimen/margin_top_you_earned_to_gst"
            android:gravity="center"
            android:padding="@dimen/padding_you_have_earned_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_default"
            android:textSize="@dimen/text_size_email_profile"
            android:fontFamily="@font/jost_medium"
            android:textColor="@color/color_yellow_1"
            android:background="@color/color_yellow_2"
            android:textStyle="bold"
            />

        <TextView
            android:layout_marginTop="@dimen/margin_top_btn_get_invoice_to_you_have"
            android:gravity="center"
            android:fontFamily="@font/jost_regular"
            android:text="@string/text_get_invoice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button_account_profile"
            android:id="@+id/btnGetInvoice"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_button_account_profile"
            android:background="@drawable/bg_button_black"
            />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>