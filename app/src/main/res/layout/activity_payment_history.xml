<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/padding_body_element_to_border_info_profile"
    android:paddingLeft="@dimen/padding_body_element_to_border_info_profile"
    android:paddingTop="@dimen/padding_body_element_to_border_info_profile"
    tools:context=".profile.menuprofile.membership.PaymentHistoryActivity">

    <LinearLayout

        android:nestedScrollingEnabled="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_label_redeem_points"
            android:text="@string/text_label_payment_history"
            android:fontFamily="@font/gotu_regular"
            android:textStyle="bold"
            android:textColor="@color/color_black_2"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/margin_top_line_to_label_membership"
            android:id="@+id/rcvListPaymentHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>